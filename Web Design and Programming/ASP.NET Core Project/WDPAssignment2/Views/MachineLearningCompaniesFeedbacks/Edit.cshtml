@model WDPAssignment2.Models.MachineLearningCompaniesFeedback

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MachineLearningCompaniesFeedback</h4>
<hr />
<div class="row">
    <div class="container-fluid" style="padding-right: 25px;">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PostDate" class="control-label">Date</label>
                <input asp-for="PostDate" class="form-control" readonly />
                <span asp-validation-for="PostDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label">Username</label>
                <input asp-for="UserName" class="form-control" readonly />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Heading" class="control-label">Heading</label>
                <input asp-for="Heading" class="form-control" placeholder="Enter a topic for your feedback" />
                <span asp-validation-for="Heading" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StarRating" class="control-label">Your Rating</label>
                <input asp-for="StarRating" class="form-control" max="5" min="0" />
                <span asp-validation-for="StarRating" class="text-danger"></span>
            </div>
            <div class="form-group col-md-9" style="padding-left: 0px;">
                <label asp-for="MessageContent" class="control-label"></label>
                <textarea asp-for="MessageContent" class="form-control" rows="3"></textarea>
                <span asp-validation-for="MessageContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Like" class="control-label">Agree</label>
                <input asp-for="Like" class="form-control" />
                <span asp-validation-for="Like" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dislike" class="control-label">Disagree</label>
                <input asp-for="Dislike" class="form-control" />
                <span asp-validation-for="Dislike" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TopicTitle" class="control-label">Select a Company</label>
                <input asp-for="TopicTitle" class="form-control" />
                <span asp-validation-for="TopicTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="padding-left: 25px;">
    <a asp-controller="Home" asp-action="MachineLearning">Back to Machine Learning Page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
